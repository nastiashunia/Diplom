<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.financialassistant.UI.Activity.AddIncomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_1"
        android:scaleType="fitXY"
        android:alpha="0.7"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    style="@style/MyLayStyle">


    <EditText
        style="@style/MyTextLayStyle"
        android:id="@+id/sumIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Сумма дохода"
        android:textSize="20sp"
        android:inputType="number" />

    <EditText
        style="@style/MyTextLayStyle"
        android:id="@+id/commentIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Комментарий"
        android:onClick="onClick"
        android:textSize="20sp"
        android:inputType="textPersonName" />

    <TextView
        style="@style/MyTextStyle"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Выберите дату"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:visibility="visible" />
    <CalendarView
        android:id="@+id/dateIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:visibility="visible"
        />


    <Spinner
        android:id="@+id/categoryIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="20sp"
 />

    <Spinner
        android:id="@+id/documentIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="20sp"
        />

    <Button
        style="@style/MyButtonSaveStyle"
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onSaveClick"
        android:text="Сохранить"
        android:visibility="visible" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
